<h3>Permissions 列表</h3>

<%= link_to '新建', new_permission_path %>

<table class='table table-hover table-striped' >
  <thead>
    <tr>
      <th>用户</th>
      <th>类</th>
      <th>角色</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @permissions.each do |permission| %>
      <tr>
        <td><%= permission.user_entity_id %></td>
        <td><%= permission.user_entity_class %></td>
        <td><%= permission.role_id %></td>
        <td><%= link_to '编辑', edit_permission_path(permission) %></td>
        <td><%= link_to '删除', permission, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


