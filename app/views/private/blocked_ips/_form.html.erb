<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-content">
          <%= form_for @blocked_ip, html:{class: "form-horizontal"} do |f| %>
            <input type="hidden" name="blocked_ip[blocked_by]" value="<%=@current_manager.id%>">
            <div class="form-group" style="margin-top: 20px"><label class="col-sm-1 control-label">是否封禁</label>
              <div class="col-sm-11">
              <%= f.select :is_blocked, options_for_select([['是', true], ['否', false]]), {}, { class: 'form-control'} %>
              </div>
            </div>

            <div class="form-group" style="margin-top: 20px"><label class="col-sm-1 control-label">被封ip</label>
              <div class="col-sm-11">
              <%= f.text_field :ip, class: 'form-control' %>
              </div>
            </div>

            <div class="hr-line-dashed"></div>
            <div class="form-group"><label class="col-sm-1 control-label">被封禁理由</label>
              <div class="col-sm-11">
                <%= f.text_field :blocked_reason, class: 'form-control' %>
              </div>
            </div>

            <div class="hr-line-dashed"></div>
            <div class="form-group"><label class="col-sm-1 control-label">IP所属位置信息</label>
              <div class="col-sm-11">
              <%= f.text_field :comment, class: 'form-control' %>
              </div>
            </div>

            <div class="hr-line-dashed"></div>
            <div class="form-group"><label class="col-sm-1 control-label">备注</label>
              <div class="col-sm-11">
              <%= f.text_field :comment, placeholder: '例如: 这个ip貌似是个局域网的IP', class: 'form-control' %>
              </div>
            </div>

            <div class="hr-line-dashed"></div>
            <div class="form-group">
              <div class="col-sm-4 col-sm-offset-1">
                <%= f.submit t("public.submit"), class: 'btn btn-primary' %>
                <%= link_to t("public.back"), blocked_ips_path, class: 'btn btn-default' %>
              </div>
            </div>
          <%end%>
        </div>
      </div>
    </div>
  </div>
</div>
<% content_for :javascript do %>

<script type="text/javascript">

</script>

<% end %>
