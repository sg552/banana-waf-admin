<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-content">
          <%= form_for @device, html:{class: "form-horizontal"} do |f| %>
            <input type="hidden" name="edit_by[edit_by]" value="<%=@current_manager.id%>">

            <div class="hr-line-dashed"></div>
            <div class="form-group"><label class="col-sm-1 control-label">备注</label>
              <div class="col-sm-11">
              <%= f.text_field :comment, placeholder: '备注', class: 'form-control' %>
              </div>
            </div>

            <div class="hr-line-dashed"></div>
            <div class="form-group">
              <div class="col-sm-4 col-sm-offset-1">
                <%= f.submit t("public.submit"), class: 'btn btn-primary' %>
                <%= link_to t("public.back"), devices_path, class: 'btn btn-default' %>
              </div>
            </div>
          <%end%>
        </div>
      </div>
    </div>
  </div>
</div>
<% content_for :javascript do %>

<script type="text/javascript">

</script>

<% end %>
