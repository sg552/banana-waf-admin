<div class="wrapper wrapper-content animated fadeInRight">
<%= form_for @system_variable, html:{class: "form-horizontal"} do |f| %>
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-content">
          <div class="form-group" style="margin-top: 20px"><label class="col-sm-1 control-label"><%= t("currencies.name") %></label>
            <div class="col-sm-10">
              <%= f.text_field :name, class: "form-control" %>
            </div>
          </div>

          <div class="hr-line-dashed"></div>
          <div class="form-group"><label class="col-sm-1 control-label"><%= t("system_var.value") %></label>
            <div class="col-sm-10">
              <%= f.text_field :value, class: "form-control" %>
            </div>
          </div>
         
          <div class="hr-line-dashed"></div>
          <div class="form-group"><label class="col-sm-1 control-label"><%= t("public.comment") %></label>
            <div class="col-sm-10">
              <%= f.text_field :comment, class: "form-control" %>
            </div>
          </div>
          <div class="hr-line-dashed"></div>
          <div class="form-group">
            <div class="col-sm-4 col-sm-offset-1">
            <%= f.submit t("public.submit"), class: 'btn btn-primary' %>
            <%= link_to t("public.cancel"), system_variables_path , class: 'btn btn-default' %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<%end%>
</div>



