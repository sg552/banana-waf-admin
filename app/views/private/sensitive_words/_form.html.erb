<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-content">
          <%= form_for @sensitive_word, html:{class: "form-horizontal"} do |f| %>
            <div class="hr-line-dashed"></div>
            <div class="form-group"><label class="col-sm-1 control-label">敏感词</label>
              <div class="col-sm-11">
                <%= f.text_field :name, class: 'form-control' %>
              </div>
            </div>

            <div class="hr-line-dashed"></div>
            <div class="form-group"><label class="col-sm-1 control-label">是否启用</label>
              <div class="col-sm-11">
                <%= f.select :is_able, options_for_select([["是", true], ["否", false]], @sensitive_word.is_able), {}, { class: 'form-control'} %>
              </div>
            </div>

            <div class="hr-line-dashed"></div>
            <div class="form-group">
              <div class="col-sm-4 col-sm-offset-1">
                <%= f.submit t("public.submit"), class: 'btn btn-primary' %>
                <%= link_to t("public.back"), sensitive_words_path, class: 'btn btn-default' %>
              </div>
            </div>
          <%end%>
        </div>
      </div>
    </div>
  </div>
</div>