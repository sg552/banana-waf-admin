<div class="row white-bg page-heading">
  <div class="col-lg-2">
    <h2>用户与密码错误数量表</h2>
  </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight ecommerce">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox">
        <div class="ibox-content">
          <tfoot>
            <tr>
              <th colspan="19">
                <ul class="pull-right"><%= paginate @member_error_count %></ul>
              </th>
            </tr>
          </tfoot>
          <div><h3><%= @member_error_count.size %>条数据<h3></div>
          <table class="table-hover table table-stripped toggle-arrow-tiny">
            <thead>
              <th>用户</th>
              <th>错误次数</th>
            </thead>
            <tbody>
              <% @member_error_count.each do |member_error_count| %>
                <tr>
                  <td>
                    <% if member_error_count[:os_type] == "member" %>
                      <%= link_to member_detail(Member.find(member_error_count[:member_id])), members_path(:id => member_error_count[:member_id]), target: '_blank' %>
                    <%else%>
                      管理员账号:  <%= member_error_count[:login_name] %>
                    <%end%>
                  </td>
                  <td>
                    <%= member_error_count[:count] %>
                  </td>
                </tr>
              <% end %>
            </tbody>
            <tfoot>
              <tr>
                <th colspan="19">
                  <ul class="pull-right"><%= paginate @member_error_count %></ul>
                </th>
              </tr>
            </tfoot>
           
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  $('form').validate()
  $('.datepicker').datetimepicker({
    format: "Y-m-d H:i"
  })
</script>